<!-- views/signin.handlebars -->
<div class="jumbotron">
  <h1>Sign in</h1>

  <form id="local-sign-in" class="collapse" action="/login" method="post">
    <div>
        <p></p>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-sm" value="Log In"/>
    </div>
  </form>

  <div id="local-reg">
    <div>
        <p></p>
        <label>New Username:</label>
        <input type="text" id="signupusername" name="username"/>
        <p class="warning"></p>
    </div>
    <div>
        <label>New Password:</label>
        <input type="password" id="signuppassword" name="password"/>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-sm" onclick="signup()" value="Register"/>
    </div>
  </div>
</div>